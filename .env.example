# OpenAI API Configuration
OPENAI_ENABLED=1
OPENAI_API_KEY=sk-your-openai-api-key-here

# Processing Configuration
FORCE_PDF_VISION=0
CONF_THRESHOLD=0.55

# Model Selection
OPENAI_VISION_MODEL=gpt-5-mini-2025-08-07
OPENAI_TEXT_MODEL=gpt-5-nano-2025-08-07

# Pricing for vision model (gpt-5-mini) - per million tokens
OPENAI_VISION_INPUT_PER_M=0.05
OPENAI_VISION_OUTPUT_PER_M=0.40

# Pricing for text model (gpt-5-nano) - per million tokens
OPENAI_TEXT_INPUT_PER_M=0.05
OPENAI_TEXT_OUTPUT_PER_M=0.40

# Optional: HuggingFace Configuration (for Qwen vision model - free alternative)
HF_TOKEN=hf_your-huggingface-token-here
HF_VISION_MODEL=Qwen/Qwen3-VL-8B-Instruct

# Debug Mode (0=INFO logs only, 1=DEBUG logs)
DEBUG=0
